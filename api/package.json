{
  "name": "koa-api-starter",
  "version": "0.2.2",
  "description": "Koa api",
  "private": false,
  "main": "src/app.js",
  "author": "Auxilin",
  "license": "MIT",
  "keywords": [
    "koa",
    "rest api",
    "auxilin"
  ],
  "scripts": {
    "build": "run-s build:**",
    "build:email": "mjml ./src/assets/emails/*.mjml -o ./src/assets/emails/dist/",
    "prestart": "npm run build",
    "start": "node src/app.js",
    "test": "run-s test:**",
    "test:eslint": "eslint ./src",
    "test:mocha": "NODE_ENV=test mocha --timeout 20000 --recursive --exit -c -R spec 'src/**/*.spec.js'",
    "development": "NODE_ENV=development nodemon --watch src src/app.js",
    "format": "prettier-eslint --write \"src/**/*.js\""
  },
  "dependencies": {
    "@auxilin/common-logger": "0.2.0",
    "@auxilin/email-service": "0.1.2",
    "@auxilin/node-mongo": "0.1.0",
    "app-module-path": "2.2.0",
    "bcrypt": "3.0.2",
    "joi": "14.0.2",
    "jsonwebtoken": "8.3.0",
    "kcors": "2.2.2",
    "koa": "2.6.1",
    "koa-bodyparser": "4.2.1",
    "koa-helmet": "4.0.0",
    "koa-jwt": "3.5.1",
    "koa-logger": "3.2.0",
    "koa-mount": "4.0.0",
    "koa-router": "7.4.0",
    "lodash": "4.17.11",
    "nodemon": "1.18.5"
  },
  "devDependencies": {
    "@auxilin/eslint-config": "0.1.1",
    "babel-eslint": "10.0.1",
    "chai": "4.2.0",
    "eslint": "5.3.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "6.1.2",
    "eslint-plugin-react": "7.11.1",
    "faker": "4.1.0",
    "mjml": "4.2.0",
    "mocha": "5.2.0",
    "npm-run-all": "4.1.3",
    "prettier-eslint-cli": "4.7.1",
    "supertest": "3.3.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/auxilincom/koa-api-starter.git"
  },
  "engines": {
    "node": ">= 10"
  }
}
